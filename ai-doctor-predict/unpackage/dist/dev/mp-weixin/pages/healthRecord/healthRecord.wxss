
	/* 背景 */
.content {
		width: 100%;
		height: 1200rpx;
		font-family: 宋体;
		font-size: 40rpx;
		background-color: #f1f1f1;
}

	/* 提示 */
.tips {
		height: 40rpx;
		font-size: 24rpx;
		color: #b3b3b3;
		font-family: SimHei;
		font-weight: 550;
		margin-left: 14rpx;
}
.tips .star {
		display: inline-block;
		color: #ff5e2e;
		font-size: 16rpx;
		margin-right: 6rpx;
		padding-bottom: 8rpx;
}
.formbox {
		background-color: #ffffff;
		width: 94%;
		margin-left: 28rpx;
}
.labelBox {
		display: flex;
		justify-content: space-between;
		align-items: center;
		border-bottom: 4rpx solid #f5f5f5;
}
.labelBox:nth-child(7) {
		border: none;
}
.labelBox .p {
		font-family: PingFang SC;
		font-size: 26rpx;
		margin-left: 28rpx;
		color: #515151;
		font-weight: 550;
}
input {
		/* width: 60%; */
		/* 	background-color: #ff5e2e; */
		/* 	border: 1px solid salmon ; */
		font-family: PingFang SC;
		font-size: 26rpx;
		color: #4b4b4b;
		text-align: end;
		display: inline-block;
		min-width: 8rpx;
		height: 24rpx;
		max-width: 400rpx;
		margin-left: 20rpx;
		margin-top: 12rpx;
		margin-right: 20rpx;
		margin-bottom: 8rpx;
		font-weight: 500;
		letter-spacing: 1rpx;
}
input::-webkit-input-placeholder {
		/* 	color: rgba(170, 255, 255, 0.5);
		letter-spacing: 1px; */
}
input::placeholder {
		/* 	color: rgba(170, 255, 255, 0.5);
		letter-spacing: 1px; */
}
.buttonBox {
		margin: auto;
		width: 90%;
}
.sumbitButton {
		font-size: 32rpx;
		font-family: STZhongsong;
		margin-top: 40rpx;
}

	/* 警告信息 */
.warn {
		margin-left: 24rpx;
		display: flex;
		height: 40rpx;
		margin-bottom: -12rpx;
}
.warn image {
		width: 26rpx;
		height: 26rpx;
}
.warn .p {
		color: #ff0000;
		font-size: 24rpx;
		height: 24rpx;
		width: 300px;
}
